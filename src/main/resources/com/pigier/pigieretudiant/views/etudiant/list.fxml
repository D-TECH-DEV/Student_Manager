<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pigier.pigieretudiant.controllers.EtudiantController">
    <children>
        <!-- Main Content Area -->
        <Pane prefHeight="900.0" prefWidth="1200.0">
            <children>
                <!-- Header -->
                <Pane prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label layoutX="30.0" layoutY="20.0" text="Gestion Étudiants" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>

                <!-- Controls Section -->
                <HBox alignment="CENTER_LEFT" layoutX="30.0" layoutY="80.0" prefHeight="60.0" prefWidth="1140.0" spacing="15.0">
                    <Button onAction="#addEtudiant" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5;" text="+ Ajouter Étudiant">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Button>

                    <TextField fx:id="searchField" onAction="#handleSearch" prefHeight="40.0" prefWidth="200.0" promptText="Rechercher..." />

                    <ComboBox fx:id="filterFiliere" onAction="#filterByFiliere" prefHeight="40.0" prefWidth="180.0" promptText="Filtrer par filière" />
                    
                    <ComboBox fx:id="filterNiveaux" onAction="#filterByNiveau" prefHeight="40.0" prefWidth="150.0" promptText="Filtrer par niveau" />

                    <Button onAction="#refreshData" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;" text="Actualiser" />

                    <Button onAction="#exportData" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5;" text="Exporter" />
                </HBox>

                <!-- Status Labels -->
                <VBox layoutX="30.0" layoutY="150.0" prefHeight="40.0" prefWidth="1140.0" spacing="5.0">
                    <Label fx:id="successLabel" style="-fx-text-fill: green;" />
                    <Label fx:id="erreurLabel" style="-fx-text-fill: red;" />
                </VBox>

                <!-- Table Section -->
                <TableView fx:id="tableEtudiants" layoutX="30.0" layoutY="200.0" prefHeight="650.0" prefWidth="1140.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                    <columns>
                        <TableColumn fx:id="colNom" prefWidth="180.0" text="Nom" />
                        <TableColumn fx:id="colPrenoms" prefWidth="180.0" text="Prénoms" />
                        <TableColumn fx:id="colMatricule" prefWidth="120.0" text="Matricule" />
                        <TableColumn fx:id="colFiliere" prefWidth="150.0" text="Filière" />
                        <TableColumn fx:id="colNiveau" prefWidth="100.0" text="Niveau" />
                        <TableColumn fx:id="colActions" prefWidth="200.0" text="Actions" />
                    </columns>
                </TableView>
            </children>
        </Pane>
    </children>
</Pane>