<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pigier.pigieretudiant.controllers.EtudiantController">
    <children>
        <!-- Main Content Area -->
        <Pane prefHeight="900.0" prefWidth="1200.0">
            <children>
                <!-- Header -->
                <Pane prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label layoutX="30.0" layoutY="20.0" text="Gestion Étudiants" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>

                <!-- Student Management Section -->
                <VBox layoutX="38.0" layoutY="184.0" prefHeight="702.0" prefWidth="1112.0" spacing="10.0">
   
                       <!-- Status Labels -->
                    <HBox prefHeight="705.0" prefWidth="1112.0" spacing="10.0">
      
                                   <!-- Table Section -->
                       <TableView fx:id="tableEtudiants" prefHeight="617.0" prefWidth="1105.0">
                           <columns>
                               <TableColumn fx:id="colNom" prefWidth="200.0" text="Nom" />
                               <TableColumn fx:id="colPrenoms" prefWidth="200.0" text="Prénoms" />
                               <TableColumn fx:id="colMatricule" prefWidth="150.0" text="Matricule" />
                               <TableColumn fx:id="colFiliere" prefWidth="150.0" text="Filière" />
                               <TableColumn fx:id="colNiveau" prefWidth="200.0" text="Niveau" />
                        <TableColumn fx:id="colActions" prefWidth="200.0" text="Actions" />
                           </columns>
                       </TableView>
                    </HBox>
                </VBox>

                <!-- Student Form Section (Hidden by default) -->
                <VBox fx:id="formSection" layoutX="50.0" layoutY="260.0" prefHeight="600.0" prefWidth="1100.0" spacing="15.0" visible="false">

                    <GridPane hgap="15.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100.0" />
                            <ColumnConstraints minWidth="200.0" />
                            <ColumnConstraints minWidth="100.0" />
                            <ColumnConstraints minWidth="200.0" />
                        </columnConstraints>

                        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nomEtudiant" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Prénoms:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <TextField fx:id="prenomsEtudiant" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                        <Label text="Matricule:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="matriculeEtudiant" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Date Naissance:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <DatePicker fx:id="dateNaissanceEtudiant" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                        <Label text="Lieu Naissance:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="lieuxNaissanceEtudiant" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Genre:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <ComboBox fx:id="genreEtudiant" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                        <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <TextField fx:id="contactEtudiant" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <TextField fx:id="emailEtudiant" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                        <Label text="Filière:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <ComboBox fx:id="filierEtudiant" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Niveau:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                        <ComboBox fx:id="niveauEtudiant" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                        <Label text="Nationalité:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <TextField fx:id="nationnaliteEtudiant" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>

                    <HBox spacing="10.0">
                        <Button onAction="#createEtudiant" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5;" text="Enregistrer" />
                        <Button onAction="#cancelCreatEtudiant" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 5;" text="Annuler" />
                    </HBox>
                </VBox>
                 <!-- Controls Section -->
                 <HBox alignment="CENTER_LEFT" layoutX="74.0" layoutY="83.0" prefHeight="85.0" prefWidth="957.0" spacing="15.0">
                     <Button onAction="#addEtudiant" prefHeight="44.0" prefWidth="126.0" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 5;" text="+ Ajouter Étudiant">
                         <font>
                             <Font name="System Bold" size="12.0" />
                         </font>
                     </Button>

                     <TextField fx:id="searchField" onAction="#handleSearch" prefHeight="40.0" prefWidth="200.0" promptText="Rechercher..." />

                     <ComboBox fx:id="filterFiliere" onAction="#filterByFiliere" prefHeight="40.0" prefWidth="183.0" />
               <ComboBox fx:id="filterNiveaux" onAction="#filterByFiliere" prefHeight="40.0" prefWidth="150.0" />

                     <Button onAction="#refreshData" prefHeight="37.0" prefWidth="89.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5;" text="Actualiser" />

                     <Button onAction="#exportData" prefHeight="41.0" prefWidth="99.0" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5;" text="Exporter" />
                 </HBox>
            </children>
        </Pane>
    </children>
</Pane>
