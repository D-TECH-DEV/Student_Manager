<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="837.0" prefWidth="1524.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pigier.pigieretudiant.controllers.EtudiantController">

    <!-- Inclusion de la barre de navigation -->
<!--    <fx:include fx:id="navigationBar" source="../layouts/NavigationBar.fxml"/>-->

    <Pane prefHeight="837.0" prefWidth="1264.0">
        <children>

            <!-- Header -->
            <Pane prefHeight="80.0" prefWidth="1264.0"
                  style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                <children>
                    <Label layoutX="30.0" layoutY="25.0" text="Gestion des Étudiants" textFill="#2c3e50">
                        <font><Font name="System Bold" size="28.0" /></font>
                    </Label>

                    <!-- Search Bar -->
                    <HBox layoutX="800.0" layoutY="22.0" prefHeight="35.0" prefWidth="318.0" spacing="10.0">
                        <children>
                            <TextField fx:id="searchField" prefHeight="35.0" prefWidth="200.0"
                                       promptText="Rechercher un étudiant..."
                                       style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #e0e0e0;" />
                            <Button onAction="#handleSearch" prefHeight="35.0" prefWidth="94.0"
                                    style="-fx-background-color: #4361ee; -fx-text-fill: white; -fx-background-radius: 20;"
                                    text="🔍 Chercher" />
                        </children>
                    </HBox>
                </children>
            </Pane>

            <!-- Action Buttons -->
            <HBox layoutX="30.0" layoutY="100.0" spacing="15.0">
                <children>
                    <Button onAction="#addEtudiant" prefHeight="45.0" prefWidth="160.0"
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;"
                            text="➕ Nouvel Étudiant" />
                    <Button onAction="#exportData" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="📊 Exporter" />
                    <Button onAction="#refreshData" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="🔄 Actualiser" />
                </children>
            </HBox>

            <!-- Filière Filter Buttons -->
            <HBox layoutX="80.0" layoutY="177.0" prefHeight="45.0" prefWidth="1084.0" spacing="15.0">
                <children>
                    <Button fx:id="allFilieresBtn" onAction="#filterAllFilieres" prefHeight="45.0" prefWidth="187.0"
                            style="-fx-background-color: #4361ee; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold;"
                            text="Toutes les filières" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="AD" textFill="#495057" userData="AD" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="CDM" userData="CDM" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="RGL" userData="RGL" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="HT" userData="HT" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="CF" userData="CF" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="MA" userData="MA" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="RH" userData="RH" />
                    <Button onAction="#filterByFiliere" prefHeight="45.0" prefWidth="140.0"
                            style="-fx-background-color: #e9ecef; -fx-background-radius: 8; -fx-font-size: 14px;"
                            text="Compta" userData="Compta" />
                </children>
            </HBox>

            <!-- Students Table -->
            <Pane layoutX="30.0" layoutY="244.0" prefHeight="480.0" prefWidth="1200.0"
                  style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);">
                <children>
                    <Label layoutX="20.0" layoutY="15.0" text="Liste des Étudiants" textFill="#2c3e50">
                        <font><Font name="System Bold" size="18.0" /></font>
                    </Label>

                    <!-- Table View -->
                    <TableView fx:id="etudiantTable" layoutX="20.0" layoutY="90.0" prefHeight="370.0" prefWidth="1160.0"
                               style="-fx-background-color: transparent;">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="80.0" text="ID" />
                            <TableColumn fx:id="nomColumn" prefWidth="150.0" text="Nom" />
                            <TableColumn fx:id="prenomColumn" prefWidth="150.0" text="Prénom" />
                            <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                            <TableColumn fx:id="niveauColumn" prefWidth="100.0" text="Niveau" />
                            <TableColumn fx:id="filiereColumn" prefWidth="150.0" text="Filière" />
                            <TableColumn fx:id="dateInscriptionColumn" prefWidth="120.0" text="Date d'inscription" />
                            <TableColumn fx:id="statutColumn" prefWidth="100.0" text="Statut" />
                            <TableColumn fx:id="actionsColumn" prefWidth="110.0" text="Actions" />
                        </columns>
                    </TableView>
                </children>
            </Pane>

        </children>
    </Pane>

</HBox>
