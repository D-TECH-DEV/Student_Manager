<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pigier.pigieretudiant.controllers.FiliereController">
    <children>
        <!-- Main Content Area -->
        <Pane prefHeight="900.0" prefWidth="1200.0">
            <children>
                <!-- Header -->
                <Pane prefHeight="60.0" prefWidth="1200.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                    <children>
                        <Label layoutX="30.0" layoutY="20.0" text="Gestion des Filières" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>

                <!-- Form Section -->
                <VBox layoutX="30.0" layoutY="80.0" prefHeight="200.0" prefWidth="1140.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
                    <children>
                        <Label text="Ajouter une nouvelle filière" textFill="#2c3e50">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>

                        <HBox spacing="15.0">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Code:" />
                                        <TextField fx:id="codeFiliere" prefWidth="150.0" promptText="Ex: INFO" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Libellé:" />
                                        <TextField fx:id="libelleFiliere" prefWidth="300.0" promptText="Ex: Informatique" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Description:" />
                                <TextArea fx:id="descriptionFiliere" prefHeight="80.0" prefWidth="600.0" promptText="Description de la filière..." />
                            </children>
                        </VBox>

                        <HBox spacing="10.0">
                            <children>
                                <Button onAction="#ajouterFiliere" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Ajouter Filière" />
                                <Label fx:id="messageLabel" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Table Section -->
                <VBox layoutX="30.0" layoutY="300.0" prefHeight="550.0" prefWidth="1140.0" spacing="10.0">
                    <children>
                        <TableView fx:id="tableFiliere" prefHeight="500.0" prefWidth="1140.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                            <columns>
                                <TableColumn fx:id="colCode" prefWidth="150.0" text="Code" />
                                <TableColumn fx:id="colLibelle" prefWidth="300.0" text="Libellé" />
                                <TableColumn fx:id="colDescription" prefWidth="500.0" text="Description" />
                                <TableColumn fx:id="colActions" prefWidth="190.0" text="Actions" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
</Pane>